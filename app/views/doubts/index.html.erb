<div class="max-w-4xl mx-auto">
  <!-- Page heading -->
  <h1 class="text-3xl font-semibold text-text mb-6">Home</h1>  
  <p class="text-right text-text"><%= @doubts_asked %> Doubts</p>
  <div id="doubts">
    <%= render @doubts %>
  </div>  
  <% if @doubts.empty? %>
    <p class="text-text-secondary text-center">No doubts raised yet.</p>
  <% else %>
    <%= render "load_more", pagy: @pagy %>
  <% end %>  
</div>
