<div class="bg-surface-secondary border-2 border-border-dark shadow-sm p-6 mb-6">
  <!-- Title -->
  <h2 class="text-2xl font-semibold text-text mb-2"><%= doubt.title %></h2>

  <!-- Added by user -->
  <p class="text-sm text-text-secondary mb-4">
    Asked by <span class="font-medium"><%= doubt.user.name %></span> 
    on <%= doubt.created_at.strftime("%B %d, %Y at %I:%M %p") %>
  </p>

  <!-- Description -->
  <div class="prose prose-sm text-text">    
    <div class="trix-content">
      <%= render_action_text_content(doubt.description.body) %>    
    </div>
  </div>
</div>
