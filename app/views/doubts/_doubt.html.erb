<div class="bg-surface-secondary border-2 border-border-dark shadow-sm mb-6">
  <div class="p-6">
    <!-- Title -->
    <h2 class="text-2xl font-semibold text-text mb-2"><%= doubt.title %></h2>

    <!-- Added by user -->
    <p class="text-sm text-text-secondary mb-4">
      Asked by <span class="font-medium"><%= doubt.user.name %></span> 
      on <%= doubt.created_at.strftime("%B %d, %Y at %I:%M %p") %>
    </p>

    <!-- Description -->
    <div class="prose prose-sm text-text">    
      <div class="trix-content">
        <%= render_action_text_content(doubt.description.body) %>    
      </div>
    </div>  
  </div>
  <hr class="border border-border">  
  <div class="p-6">
    <div id="<%= dom_id(doubt, :comment_list) %>">
      <%= render doubt.comments.last(2) %>
    </div>
    <%= form_with(model: [doubt, Comment.new], class: "w-full") do |f| %>
      <div class="flex flex-col sm:flex-row items-start sm:items-center gap-2 w-full">
    
        <!-- Plain text input -->
        <%= f.text_field :body,
              placeholder: "Write a comment...",
              class: "flex-1 p-2 border-1 border-border rounded focus:ring focus:ring-border bg-white focus:outline-none" %>
    
        <!-- Submit button -->
        <%= f.submit "Comment",
              class: "bg-white hover:bg-accent text-accent hover:text-white px-4 py-2 rounded flex-shrink-0 border border-accent" %>
    
      </div>
    <% end %>
    
  </div> 
</div>
